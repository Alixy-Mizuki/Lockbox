{
    "extends": "@smol-code/tsconfig",
    "compilerOptions": {
      "outDir": "./build",
      "baseUrl": "./src",
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "inlineSourceMap": true,
      "paths": {
        "@root/*": [
          "../*"
        ],
        "@util/*": [
          "util/*"
        ],
        "@Mystique": [
          "main.ts"
        ]
      },
    },
    "include": [
      "**/*"
    ],
    "exclude": [
      "node_modules",
      "build",
      "tmp",
      "logs",
      "test"
    ],
  }